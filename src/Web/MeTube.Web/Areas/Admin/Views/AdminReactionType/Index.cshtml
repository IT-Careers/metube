@model List<ReactionTypeDto>

<div class="d-flex justify-content-between m-5">
    <h1 class="fw-bold">Reaction Types</h1>
    <a href="/Admin/AdminReactionType/Create" class="btn btn-primary fw-bold p-3">Create Reaction Type</a>
</div>
<hr class="hr-2"/>
<table class="table table-hover w-95 mx-auto mt-3">
    <thead>
        <tr>
            <th scope="col" class="col-md-3">#</th>
            <th scope="col" class="col-md-4">Icon</th>
            <th scope="col" class="col-md-1">Type</th>
            <th scope="col" class="col-md-4">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var reactionType in Model)
        {
            <tr>
                <th scope="row" class="col-md-3">@reactionType.Id</th>
                <td class="col-md-4"><img width="50px" height="50px" src="@reactionType.ReactionIcon.CloudURL" /></td>
                <td class="col-md-1">@reactionType.Type</td>
                <td class="d-flex justify-content-between col-md-4">
                    <button class="btn btn-success">Edit</button>
                    <button class="btn btn-secondary">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>