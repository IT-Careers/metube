@using Microsoft.AspNetCore.Identity
@inject SignInManager<MeTubeUser> SignInManager
@inject UserManager<MeTubeUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="#" data-bs-toggle="modal" data-bs-target="#registerModal">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Login</a>
    </li>
}
</ul>

<partial name="_LoginModalPartial">
<partial name="_RegistrationModalPartial">